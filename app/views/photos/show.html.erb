<div class="page-header">
  <h3>Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Caption</dt>
      <dd><%= @photo.caption %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @photo.image %>" class="img-responsive"></dd>

      <dt>User</dt>
      <dd>
        <% if @photo.user.present? %>
          <a href="/users/<%= @photo.user_id %>">
            <%= @photo.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>Itinerary</dt>
      <dd>
        <% if @photo.itinerary.present? %>
          <a href="/itineraries/<%= @photo.itinerary_id %>">
            <%= @photo.itinerary.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @photo.user %>
        <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
